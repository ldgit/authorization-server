{
  "name": "authorization-server",
  "type": "module",
  "version": "1.0.0",
  "description": "Oauth2 authorization server for usage in my personal apps.",
  "main": "build/index.js",
  "scripts": {
    "start": "node build/index.js",
    "dev": "tsx watch index.ts",
    "build": "tsc -p tsconfig.json",
    "migrations": "node bin/migrate.js",
    "dummy-data": "tsx bin/dummy_data.ts",
    "dev-db": "docker-compose up -d && npm run migrations && npm run dummy-data",
    "test": "vitest"
  },
  "author": "Danko Lučić",
  "license": "AGPL-3.0-only",
  "dependencies": {
    "argon2": "^0.40.1",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.1",
    "pg": "^8.11.3",
    "postgrator": "^7.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "@types/uuid": "^9.0.8",
    "fastify-tsconfig": "^2.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "uuid": "^9.0.1",
    "vitest": "^1.4.0"
  }
}
